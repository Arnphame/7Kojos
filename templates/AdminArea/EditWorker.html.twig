{% extends 'AdminArea/base.html.twig' %}
{% block body %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Edit worker</h1>
        </div>
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">Code</label>
                <input type="text" class="form-control" id="workerCode" aria-describedby="worker_code" placeholder="worker code">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Name</label>
                <input type="text" class="form-control" id="workerName" placeholder="worker name">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Surname</label>
                <input type="number" class="form-control" id="workerSurname" placeholder="worker surname">
            </div>
			<div class="form-group">
                <label for="exampleInputPassword1">Birth date</label>
                <input type="date" class="form-control" id="workerBirthDate" placeholder="1997-03-10">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Address</label>
                <input type="text" class="form-control" id="workerAddress" placeholder="Minijos g. 8">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Phone number</label>
                <input type="text" class="form-control" id="workerPhoneNumber" placeholder="862097715">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Email</label>
                <input type="text" class="form-control" id="workerEmail" placeholder="krabas@ktu.lt">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Job position</label>
                <input type="text" class="form-control" id="workerJobPosition" placeholder="Consultant">
            </div>           
            <button type="submit" class="btn btn-primary">Add new worker</button>
        </form>
{% endblock %}