{% extends 'AdminArea/base.html.twig' %}

{% block body %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Add new product</h1>
        </div>
        <div class="container">
            <form action="{{  'selected' }}">
                <div class="form-group">
                    <label for="exampleSelect1">Select Product type</label>
                    <select class="form-control" id="type" name="type">
                        <option value="MB">Motherboard</option>
                        <option value="RAM">Memory</option>
                        <option value="Storage">Storage</option>
                        <option value="CPU">Processor</option>
                        <option value="GPU">Video card</option>
                        <option value="PSU">Power supply</option>
                        <option value="Chassis">Case</option>
                        <option value="CPUCooler">Processor cooler</option>
                        <option value="ChassisCooler">Case cooler</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

{% endblock %}