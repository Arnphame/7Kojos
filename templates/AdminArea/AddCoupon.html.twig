{% extends 'AdminArea/base.html.twig' %}
{% block body %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Add coupon</h1>
        </div>
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">Code</label>
                <input type="text" class="form-control" id="couponCode" aria-describedby="couponCode" placeholder="Coupon code">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Discount (in %)</label>
                <input type="text" class="form-control" id="couponDiscount" placeholder="20">
            </div>
            <button type="submit" class="btn btn-primary">Add Coupon</button>
        </form>
{% endblock %}