{% extends 'AdminArea/base.html.twig' %}
{% block body %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Add new product</h1>
    </div>

    {% form_theme form 'bootstrap_4_layout.html.twig' %}
        {{ form_start(form) }}
        {{ form_row(form._token) }}
        {{ form_errors(form) }}
        Product Number {{ form_widget(form.product_number) }}
        Name {{ form_widget(form.name) }}
        Price {{ form_widget(form.price) }}
        Discount Price {{ form_widget(form.discount_price) }}
        Quantity {{ form_widget(form.quantity) }}
        Long Description {{ form_widget(form.long_description) }}
        Short Description {{ form_widget(form.short_description) }}
        Warranty Time {{ form_widget(form.warranty_time) }}
        Size {{ form_widget(form.size) }}
        RPM {{ form_widget(form.RPM) }}
        Airflow {{ form_widget(form.airflow) }}
        Noise Level {{ form_widget(form.noiseLevel) }}
        <br>
        <button type="submit" class="btn btn-primary">Add new product</button>

{% endblock %}