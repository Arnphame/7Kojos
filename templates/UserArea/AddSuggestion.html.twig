{% extends 'UserArea/base.html.twig' %}
{% block body %}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Add new suggestion</h1>
        </div>

    {% form_theme form 'bootstrap_4_layout.html.twig' %}
        {% if suggestion is defined %}
            {{ form_start(form) }}
            {{ form_row(form._token) }}
            {{ form_errors(form) }}

            Name {{ form_widget(form.name) }}
            Message {{ form_widget(form.message) }}
        {% else %}
            {{ form_start(form) }}
            {{ form_row(form._token) }}
            {{ form_errors(form) }}
            Name {{ form_widget(form.name) }}
            Message {{ form_widget(form.message) }}
            <br>
            <button type="submit" class="btn btn-primary">Add new suggestion</button>
        {% endif %}

{% endblock %}